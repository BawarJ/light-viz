.sectionHidden {
  display: none;
}

.shown {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.hidden {
  composes: shown;
  height: 2em;
  overflow: hidden;
}

.shownIcon {
  composes: fa            from 'font-awesome/css/font-awesome.css';
  composes: fa-fw         from 'font-awesome/css/font-awesome.css';
  composes: fa-caret-down from 'font-awesome/css/font-awesome.css';
  composes: fa-lg         from 'font-awesome/css/font-awesome.css';
  line-height: 20px;
  cursor: pointer;
}

.hiddenIcon {
  composes: fa             from 'font-awesome/css/font-awesome.css';
  composes: fa-fw          from 'font-awesome/css/font-awesome.css';
  composes: fa-caret-right from 'font-awesome/css/font-awesome.css';
  composes: fa-lg         from 'font-awesome/css/font-awesome.css';
  line-height: 20px;
  cursor: pointer;
}

.panelHeader {
  display: inline-flex;
}

.section {
  flex: 1;
  display: flex;
  flex-direction: row;
}
