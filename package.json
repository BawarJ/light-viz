{
  "name": "light-viz",
  "description": "Scientific Visualization application for tailored post-processing",
  "license": "BSD-3-Clause",
  "version": "0.0.0-semantically-release",
  "main": "./lib/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kitware/light-viz.git"
  },
  "dependencies": {
    "commander": "2.9.0",
    "open": "0.0.5",
    "shelljs": "0.6.0"
  },
  "devDependencies": {
    "paraviewweb": "1.6.8",

    "font-awesome": "4.6.3",
    "mout": "1.0.0",
    "normalize.css": "4.1.1",
    "react": "15.1.0",
    "react-dom": "15.1.0",
    "react-router": "2.4.1",
    "history": "3.0.0",

    "ws": "0.8.1",

    "gl-matrix": "2.3.2",
    "hammerjs": "2.0.6",
    "monologue.js": "0.3.5",

    "kw-web-suite": "2.0.1",
    "kw-doc": "1.0.10"
  },
  "scripts": {
    "postinstall": "fix-kw-web-suite || true",

    "doc"           : "kw-doc -c ./Documentation/config.js",
    "doc:www"       : "kw-doc -c ./Documentation/config.js -s",
    "doc:publish"   : "kw-doc -c ./Documentation/config.js -p",

    "build": "fix-autobahn && webpack --progress --colors",
    "build:debug": "fix-autobahn && webpack --display-modules",
    "build:release": "export NODE_ENV=production && fix-autobahn && webpack -p --progress --colors",

    "commit": "git cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "bin": {
    "LightViz": "./bin/light-viz-cli.js"
  },
  "preferGlobal": true,
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
