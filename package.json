{
  "name": "pvw-lightviz",
  "version": "0.0.0-semantically-release",
  "description": "Scientific Visualization application for tailored post-processing",
  "keywords": [
    "3d",
    "visualization",
    "scientific",
    "paraview",
    "geometry",
    "point cloud",
    "mesh"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitware/light-viz.git"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/kitware/light-viz/issues"
  },
  "homepage": "https://github.com/kitware/light-viz#readme",
  "scripts": {
    "validate": "prettier --config ./prettier.config.js --list-different \"src/**/*.js\"",
    "reformat": "prettier --config ./prettier.config.js --write \"src/**/*.js\"",
    "doc": "kw-doc -c ./documentation/config.js",
    "doc:www": "kw-doc -c ./documentation/config.js -s",
    "doc:publish": "kw-doc -c ./documentation/config.js -mp",
    "build": "webpack --config build/webpack.dev.config.js",
    "build:release": "webpack --config build/webpack.prod.config.js -p",
    "version": "node ./build/writeVersion.js",
    "dev": "webpack-dev-server --config build/webpack.dev.config.js",
    "bundle": "inline-source --compress false --root ./dist ./dist/index.html ./dist/LightViz.html",
    "commit": "git cz",
    "semantic-release": "semantic-release",
    "prepublishOnly": "npm run version && npm run bundle"
  },
  "author": "Kitware",
  "dependencies": {
    "hammerjs": "^2.0.8",
    "material-design-icons-iconfont": "3.0.3",
    "monologue.js": "^0.3.5",
    "mousetrap": "1.6.2",
    "paraviewweb": "3.2.3",
    "typeface-roboto": "0.0.54",
    "vtk.js": "7.5.8",
    "vue": "2.5.17",
    "vuetify": "1.1.10",
    "vuex": "3.0.1",
    "wslink": "0.1.7"
  },
  "devDependencies": {
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "eslint-plugin-vue": "4.7.1",
    "kw-doc": "1.2.1",
    "kw-web-suite": "6.2.0",
    "vue-loader": "15.3.0",
    "vue-style-loader": "4.1.1",
    "vue-template-compiler": "2.5.17",
    "webpack-merge": "4.1.4",
    "write-file-webpack-plugin": "4.3.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
