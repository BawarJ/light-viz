{
  "name": "light-viz",
  "description": "Scientific Visualization application for tailored post-processing",
  "license": "BSD-3-Clause",
  "version": "0.0.0-semantically-release",
  "main": "./lib/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kitware/light-viz.git"
  },
  "dependencies": {
    "commander": "2.9.0",
    "open": "0.0.5",
    "shelljs": "0.6.0"
  },
  "devDependencies": {
    "paraviewweb": "1.2.30",

    "font-awesome": "4.5.0",
    "mout": "0.11.1",
    "normalize.css": "3.0.3",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-router": "2.0.0",
    "history": "1.17.0",

    "ws": "0.8.1",

    "gl-matrix": "2.3.1",
    "hammerjs": "2.0.4",
    "monologue.js": "0.3.4",

    "kw-web-suite": "1.0.7"
  },
  "scripts": {
    "postinstall": "fix-kw-web-suite || true",

    "build": "fix-autobahn && webpack --progress --colors",
    "build:debug": "fix-autobahn && webpack --display-modules",
    "build:release": "export NODE_ENV=production && fix-autobahn && webpack -p --progress --colors",

    "start": "webpack-dev-server --content-base ./dist/ --hot --progress --colors ",
    "open": "open http://localhost:8080/webpack-dev-server/#/",

    "commit": "git cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "bin": {
    "LightViz": "./bin/light-viz-cli.js"
  },
  "preferGlobal": true,
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
